[scripts]
test = "pytest --cov=awsume --cov-report term"
test-html = "pytest --cov=awsume --cov-report html:coverage/html"
test-only = "pytest"
test-watch = "watchmedo shell-command --patterns='*.py;*.txt' --recursive --command='pipenv run test-html -s'"
build = "python setup.py sdist"
deploy-test = "twine upload -r test dist/*"
deploy-pypi = "twine upload -r pypi dist/*"
